{
  "name": "event-monolith-backend",
  "version": "1.0.0",
  "description": "Event Management Application Backend with Elysia.js, Prisma, and Neon",
  "main": "src/index.ts",
  "scripts": {
    "dev": "bun run --watch src/index.ts",
    "start": "bun run src/index.ts",
    "db:push": "bunx prisma db push --schema=src/prisma/schema.prisma",
    "db:generate": "bunx prisma generate --schema=src/prisma/schema.prisma",
    "db:studio": "bunx prisma studio --schema=src/prisma/schema.prisma",
    "db:migrate": "bunx prisma migrate dev --schema=src/prisma/schema.prisma",
    "db:seed": "bun run src/prisma/seed.ts"
  },
  "dependencies": {
    "@elysiajs/cors": "0.8.0",
    "@elysiajs/swagger": "0.8.0",
    "@elysiajs/websocket": "0.1.0",
    "@prisma/client": "^5.22.0",
    "bcrypt": "^5.1.1",
    "elysia": "0.8.0",
    "jsonwebtoken": "^9.0.2",
    "nodemailer": "^6.9.15"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/node": "^22.10.2",
    "@types/nodemailer": "^6.4.17",
    "bun-types": "^1.0.0",
    "prisma": "^5.22.0",
    "typescript": "^5.7.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
